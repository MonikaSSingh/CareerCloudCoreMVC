@model IEnumerable<CareerCloud.Pocos.ApplicantProfilePoco>

@{
    ViewData["Title"] = "Applicant Profile";
}



<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SecurityLogin)
            </th>
            <th>
                Salary
                @*@Html.DisplayNameFor(model => model.CurrentSalary)/
                    @Html.DisplayNameFor(model => model.CurrentRate)/
                    @Html.DisplayNameFor(model => model.Currency)*@
            </th>
            <th>
                Address
                @*@Html.DisplayNameFor(model => model.Street)
                    @Html.DisplayNameFor(model => model.City)
                    @Html.DisplayNameFor(model => model.Province)
                    @Html.DisplayNameFor(model => model.PostalCode)
                    @Html.DisplayNameFor(model => model.SystemCountryCode)*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SecurityLogin.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentSalary)/
                    @Html.DisplayFor(modelItem => item.CurrentRate)/
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)<br />
                    @Html.DisplayFor(modelItem => item.City)
                    @Html.DisplayFor(modelItem => item.Province)<br />
                    @Html.DisplayFor(modelItem => item.PostalCode)
                    @Html.DisplayFor(modelItem => item.SystemCountryCode.Code)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a><br />
                    @*@Html.ActionLink("Country", "Index", "SystemCountryCode", new { id = item.Id }, null)|
                        @Html.ActionLink("Login", "Index", "SecurityLogin", new { id = item.Id }, null)|*@
                    @Html.ActionLink("Education", "Index", "ApplicantEducation", new { id = item.Id }, null)|
                    @Html.ActionLink("Resume", "Index", "ApplicantResume", new { id = item.Id }, null)|
                    @Html.ActionLink("Skill", "Index", "ApplicantSkill", new { id = item.Id }, null)<br />
                    @Html.ActionLink("Work History", "Index", "ApplicantWorkHistory", new { id = item.Id }, null)|
                    @Html.ActionLink("Job Application", "Index", "ApplicantJobApplication", new { id = item.Id }, null)

                </td>
            </tr>
        }
    </tbody>
</table>
